<Page x:Class="Music_Organizer.AddAlbumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Music_Organizer"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAlbumPage">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="12" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Artist:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="ArtistBox" Width="260" Margin="0,0,16,0"/>
            <TextBlock Text="Album:" VerticalAlignment="Center" Margin="0,0,8,0"/>
            <TextBox x:Name="AlbumBox" Width="260" Margin="0,0,16,0"/>
            <Button Content="Fetch"
                    Width="110"
                    Click="Fetch_Click"/>
            <Button Content="Save"
                    Width="110"
                    Margin="10,0,0,0"
                    Click="Save_Click"/>
        </StackPanel>

        <TextBlock x:Name="StatusText"
                   Grid.Row="2"
                   Opacity="0.8"/>

        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Border Width="220" Height="220" CornerRadius="10" ClipToBounds="True">
                <Image x:Name="CoverImage" Stretch="UniformToFill"/>
            </Border>

            <ListBox x:Name="TracksList"
                     Grid.Column="2"/>
        </Grid>
    </Grid>
</Page>
