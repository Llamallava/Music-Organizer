<Page x:Class="Music_Organizer.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Music_Organizer.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Grid Background="{StaticResource Backdrop}">

        <!-- Background art: scales consistently in fullscreen/windowed -->
        <Viewbox Stretch="UniformToFill"
                 IsHitTestVisible="False"
                 Opacity="0.55">
            <Canvas Width="1600" Height="900">
                <Ellipse Width="520" Height="520" Canvas.Left="-180" Canvas.Top="-180" Fill="#222B3F"/>
                <Ellipse Width="520" Height="520" Canvas.Left="1060" Canvas.Top="40" Fill="#1B2233"/>
                <Ellipse Width="780" Height="780" Canvas.Left="320" Canvas.Top="430" Fill="#141A28"/>
            </Canvas>
        </Viewbox>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border Grid.Row="0"
                    CornerRadius="18"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Background="{StaticResource Bg1}"
                    Padding="14"
                    Effect="{StaticResource CardShadow}">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Style="{StaticResource BackButtonStyle}"
                                Content="←"
                                ToolTip="Back"
                                Click="Back_Click"/>

                        <TextBlock Grid.Column="2"
                                   Text="Search"
                                   FontSize="22"
                                   FontWeight="ExtraBold"
                                   VerticalAlignment="Center"/>

                        <!-- Colored chip on header (integrated color) -->
                        <Border Grid.Column="3"
                                Height="28"
                                CornerRadius="14"
                                BorderBrush="{StaticResource BorderSoft}"
                                BorderThickness="1"
                                Background="#0E1420"
                                VerticalAlignment="Center"
                                Padding="10,0"
                                Opacity="0.95">
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Ellipse Width="8" Height="8" Fill="{StaticResource AccentB}" Margin="0,0,8,0"/>
                                <TextBlock Text="Filters + ranked results"
                                           Foreground="{StaticResource TextSecondary}"
                                           FontSize="12"
                                           VerticalAlignment="Center"/>
                            </StackPanel>
                        </Border>
                    </Grid>

                    <Border Grid.Row="1"
                            Height="3"
                            VerticalAlignment="Bottom"
                            CornerRadius="0,0,18,18"
                            Background="{StaticResource HeaderGlow}"
                            Effect="{StaticResource GlowShadow}"
                            Opacity="0.85"
                            IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <TabControl Grid.Row="2"
                        Style="{StaticResource HardTabControlStyle}"
                        BorderThickness="0"
                        Background="Transparent"
                        SelectedIndex="0"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True"
                        Margin="0,4,0,0">

                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource CrispTabItemStyle}"/>
                    <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource CrispGridViewHeaderStyle}"/>
                    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource CrispListViewStyle}"/>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource CrispListViewItemStyle}"/>
                </TabControl.Resources>

                <!-- ===================== -->
                <!-- SONG SEARCH -->
                <!-- ===================== -->
                <TabItem Header="Songs" Margin="0">
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filters Card -->
                        <Border Grid.Column="0"
                                Style="{StaticResource CardBorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Header with integrated gradient accent -->
                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Filters"
                                               FontWeight="ExtraBold"
                                               FontSize="15"/>

                                    <Border Grid.Row="1"
                                            Height="3"
                                            CornerRadius="2"
                                            Background="{StaticResource HeaderGlow}"
                                            Opacity="0.55"
                                            IsHitTestVisible="False"/>
                                </Grid>

                                <Border Grid.Row="2"
                                        Height="1"
                                        Background="{StaticResource BorderSoft}"
                                        Opacity="0.9"/>

                                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                    <TextBlock Text="Min score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsMinScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Max score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsMaxScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <CheckBox Style="{StaticResource CrispCheckBoxStyle}"
                                              Content="Include interludes"
                                              IsChecked="{Binding SongsIncludeInterludes}"/>

                                    <TextBlock Text="Title/artist contains" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsTextFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Notes contain" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsNotesFilter, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Apply"
                                            Width="120"
                                            Command="{Binding ApplySongsFiltersCommand}"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SongsStatusText}"
                                               Foreground="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Thin colored divider between panels (integrated color) -->
                        <Border Grid.Column="1"
                                Width="4"
                                CornerRadius="2"
                                Background="{StaticResource HeaderGlow}"
                                Opacity="0.35"
                                VerticalAlignment="Stretch"
                                Margin="0,6,0,6"
                                IsHitTestVisible="False"/>

                        <!-- Results Card -->
                        <Border Grid.Column="2"
                                Style="{StaticResource CardBorderStyle}"
                                Background="{StaticResource CardBg2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <!-- Header with integrated color -->
                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="Results"
                                                   FontWeight="ExtraBold"
                                                   FontSize="15"/>

                                        <Border Grid.Row="1"
                                                Height="3"
                                                CornerRadius="2"
                                                Background="{StaticResource HeaderGlow}"
                                                Opacity="0.55"
                                                IsHitTestVisible="False"/>
                                    </Grid>

                                    <Border Grid.Column="1"
                                            Height="28"
                                            CornerRadius="14"
                                            BorderBrush="{StaticResource BorderSoft}"
                                            BorderThickness="1"
                                            Background="#0E1420"
                                            VerticalAlignment="Center"
                                            Padding="10,0"
                                            Opacity="0.95">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="{StaticResource AccentC}" Margin="0,0,8,0"/>
                                            <TextBlock Text="Ranked by score"
                                                       Foreground="{StaticResource TextSecondary}"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <ListView Grid.Row="2"
                                          ItemsSource="{Binding SongResults}"
                                          SelectedItem="{Binding SelectedSongResult}"
                                          MouseDoubleClick="SongResult_DoubleClick">
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource CrispGridViewHeaderStyle2}">
                                            <GridViewColumn Header="#" Width="44"
                                                            DisplayMemberBinding="{Binding Rank}"/>
                                            <GridViewColumn Header="Song" Width="280"
                                                            DisplayMemberBinding="{Binding SongTitle}"/>
                                            <GridViewColumn Header="Album - Artist" Width="360"
                                                            DisplayMemberBinding="{Binding AlbumDisplay}"/>
                                            <GridViewColumn Header="Score" Width="90"
                                                            DisplayMemberBinding="{Binding ScoreText}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

                <!-- ===================== -->
                <!-- ALBUM SEARCH -->
                <!-- ===================== -->
                <TabItem Header="Albums" Margin="0">
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filters Card -->
                        <Border Grid.Column="0"
                                Style="{StaticResource CardBorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="8"/>
                                    </Grid.RowDefinitions>

                                    <TextBlock Grid.Row="0"
                                               Text="Filters"
                                               FontWeight="ExtraBold"
                                               FontSize="15"/>

                                    <Border Grid.Row="1"
                                            Height="3"
                                            CornerRadius="2"
                                            Background="{StaticResource HeaderGlow}"
                                            Opacity="0.55"
                                            IsHitTestVisible="False"/>
                                </Grid>

                                <Border Grid.Row="2"
                                        Height="1"
                                        Background="{StaticResource BorderSoft}"
                                        Opacity="0.9"/>

                                <StackPanel Grid.Row="3" Margin="0,10,0,0">
                                    <TextBlock Text="Min conclusion score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsMinConclusionScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Min computed score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsMinComputedScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Title/artist contains" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsTextFilter, UpdateSourceTrigger=PropertyChanged}"/>
                                </StackPanel>

                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Apply"
                                            Width="120"
                                            Command="{Binding ApplyAlbumsFiltersCommand}"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding AlbumsStatusText}"
                                               Foreground="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <Border Grid.Column="1"
                                Width="4"
                                CornerRadius="2"
                                Background="{StaticResource HeaderGlow}"
                                Opacity="0.35"
                                VerticalAlignment="Stretch"
                                Margin="0,6,0,6"
                                IsHitTestVisible="False"/>

                        <!-- Results Card -->
                        <Border Grid.Column="2"
                                Style="{StaticResource CardBorderStyle}"
                                Background="{StaticResource CardBg2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="8"/>
                                        </Grid.RowDefinitions>

                                        <TextBlock Grid.Row="0"
                                                   Text="Results"
                                                   FontWeight="ExtraBold"
                                                   FontSize="15"/>

                                        <Border Grid.Row="1"
                                                Height="3"
                                                CornerRadius="2"
                                                Background="{StaticResource HeaderGlow}"
                                                Opacity="0.55"
                                                IsHitTestVisible="False"/>
                                    </Grid>

                                    <Border Grid.Column="1"
                                            Height="28"
                                            CornerRadius="14"
                                            BorderBrush="{StaticResource BorderSoft}"
                                            BorderThickness="1"
                                            Background="#0E1420"
                                            VerticalAlignment="Center"
                                            Padding="10,0"
                                            Opacity="0.95">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <Ellipse Width="8" Height="8" Fill="{StaticResource AccentA}" Margin="0,0,8,0"/>
                                            <TextBlock Text="Conclusion → Computed"
                                                       Foreground="{StaticResource TextSecondary}"
                                                       VerticalAlignment="Center"
                                                       FontSize="12"/>
                                        </StackPanel>
                                    </Border>
                                </Grid>

                                <ListView Grid.Row="2"
                                          ItemsSource="{Binding AlbumResults}"
                                          SelectedItem="{Binding SelectedAlbumResult}"
                                          MouseDoubleClick="AlbumResult_DoubleClick">
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource CrispGridViewHeaderStyle2}">
                                            <GridViewColumn Header="#" Width="44"
                                                            DisplayMemberBinding="{Binding Rank}"/>
                                            <GridViewColumn Header="Album - Artist" Width="420"
                                                            DisplayMemberBinding="{Binding AlbumDisplay}"/>
                                            <GridViewColumn Header="Conclusion" Width="110"
                                                            DisplayMemberBinding="{Binding ConclusionScoreText}"/>
                                            <GridViewColumn Header="Computed" Width="110"
                                                            DisplayMemberBinding="{Binding ComputedScoreText}"/>
                                            <GridViewColumn Header="Tracks used" Width="110"
                                                            DisplayMemberBinding="{Binding TracksUsedText}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</Page>
