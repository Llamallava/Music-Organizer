<Page x:Class="Music_Organizer.Pages.SearchPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Music_Organizer.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SearchPage">

    <Page.Resources>

        <!-- Brushes -->
        <SolidColorBrush x:Key="Bg0" Color="#101217"/>
        <SolidColorBrush x:Key="Bg1" Color="#141A22"/>
        <SolidColorBrush x:Key="CardBg" Color="#151B24"/>
        <SolidColorBrush x:Key="CardBg2" Color="#121824"/>
        <SolidColorBrush x:Key="BorderSoft" Color="#2A3445"/>
        <SolidColorBrush x:Key="BorderHard" Color="#3A4A63"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#EAF0FF"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#B7C3DA"/>
        <SolidColorBrush x:Key="TextMuted" Color="#8FA0BF"/>

        <SolidColorBrush x:Key="AccentA" Color="#7C4DFF"/>
        <SolidColorBrush x:Key="AccentB" Color="#00D4FF"/>
        <SolidColorBrush x:Key="AccentC" Color="#FF3D9A"/>

        <LinearGradientBrush x:Key="HeaderGlow" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#3A1DFF" Offset="0"/>
            <GradientStop Color="#008CFF" Offset="0.55"/>
            <GradientStop Color="#FF2C86" Offset="1"/>
        </LinearGradientBrush>

        <LinearGradientBrush x:Key="Backdrop" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#0E1117" Offset="0"/>
            <GradientStop Color="#101927" Offset="0.45"/>
            <GradientStop Color="#0E1220" Offset="1"/>
        </LinearGradientBrush>

        <!-- Effects -->
        <DropShadowEffect x:Key="CardShadow"
                          Color="#000000"
                          BlurRadius="18"
                          ShadowDepth="3"
                          Opacity="0.55"/>

        <DropShadowEffect x:Key="GlowShadow"
                          Color="#3A1DFF"
                          BlurRadius="22"
                          ShadowDepth="0"
                          Opacity="0.35"/>

        <!-- Base Typography -->
        <Style TargetType="{x:Type TextBlock}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="TextOptions.TextFormattingMode" Value="Display"/>
            <Setter Property="TextOptions.TextRenderingMode" Value="ClearType"/>
        </Style>

        <!-- Inputs -->
        <Style x:Key="CrispTextBoxStyle" TargetType="{x:Type TextBox}">
            <Setter Property="Background" Value="#0E1420"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="{StaticResource AccentB}"/>
            <Setter Property="SelectionBrush" Value="#553A1DFF"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TextBox}">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost"
                                          Margin="0"
                                          SnapsToDevicePixels="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsKeyboardFocused" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentB}"/>
                                <Setter TargetName="Bd" Property="BorderThickness" Value="1.5"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CrispCheckBoxStyle" TargetType="{x:Type CheckBox}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>

        <!-- Buttons -->
        <Style x:Key="PrimaryButtonStyle" TargetType="{x:Type Button}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Background" Value="#1E2A40"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderHard}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="12,9"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Grid>
                            <Border x:Name="Bd"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="11"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>

                            <!-- subtle top highlight -->
                            <Border CornerRadius="11"
                                    Margin="1"
                                    Opacity="0.22"
                                    IsHitTestVisible="False">
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                        <GradientStop Color="#FFFFFF" Offset="0"/>
                                        <GradientStop Color="#00FFFFFF" Offset="0.75"/>
                                    </LinearGradientBrush>
                                </Border.Background>
                            </Border>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentB}"/>
                                <Setter TargetName="Bd" Property="Background" Value="#253553"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#16243C"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="{StaticResource AccentA}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="BackButtonStyle" TargetType="{x:Type Button}" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Width" Value="44"/>
            <Setter Property="Height" Value="38"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#141B2A"/>
        </Style>

        <!-- Cards -->
        <Style x:Key="CardBorderStyle" TargetType="{x:Type Border}">
            <Setter Property="Background" Value="{StaticResource CardBg}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="16"/>
            <Setter Property="Padding" Value="14"/>
            <Setter Property="Effect" Value="{StaticResource CardShadow}"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
        </Style>

        <!-- Tabs -->
        <Style x:Key="CrispTabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
        </Style>

        <Style x:Key="CrispTabItemStyle" TargetType="{x:Type TabItem}">
            <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabItem}">
                        <Grid>
                            <Border x:Name="TabPill"
                                    Background="#0F1520"
                                    BorderBrush="{StaticResource BorderSoft}"
                                    BorderThickness="1"
                                    CornerRadius="14"
                                    Padding="14,8"
                                    SnapsToDevicePixels="True">
                                <ContentPresenter HorizontalAlignment="Center"
                                                  VerticalAlignment="Center"
                                                  RecognizesAccessKey="True"/>
                            </Border>

                            <!-- Accent strip when selected -->
                            <Border x:Name="AccentStrip"
                                    Height="3"
                                    VerticalAlignment="Bottom"
                                    CornerRadius="0,0,14,14"
                                    Background="{StaticResource HeaderGlow}"
                                    Opacity="0"
                                    Margin="6,0,6,2"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                                <Setter TargetName="TabPill" Property="Background" Value="#151E2D"/>
                                <Setter TargetName="TabPill" Property="BorderBrush" Value="{StaticResource BorderHard}"/>
                                <Setter TargetName="AccentStrip" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="TabPill" Property="BorderBrush" Value="{StaticResource AccentB}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="TabPill" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- ListView / GridView -->
        <Style x:Key="CrispListViewStyle" TargetType="{x:Type ListView}">
            <Setter Property="Background" Value="#0E1420"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="2"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style x:Key="CrispGridViewHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Background" Value="#121B2A"/>
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>

        <Style x:Key="CrispListViewItemStyle" TargetType="{x:Type ListViewItem}">
            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,2"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type ListViewItem}">
                        <Border x:Name="RowBd"
                                Background="Transparent"
                                CornerRadius="10"
                                BorderThickness="1"
                                BorderBrush="Transparent"
                                SnapsToDevicePixels="True">
                            <GridViewRowPresenter />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="RowBd" Property="Background" Value="#1A2436"/>
                                <Setter TargetName="RowBd" Property="BorderBrush" Value="#2E3F5A"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="RowBd" Property="Background" Value="#223153"/>
                                <Setter TargetName="RowBd" Property="BorderBrush" Value="{StaticResource AccentB}"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="RowBd" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CrispTabControlTemplateStyle" TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Header -->
                            <TabPanel Grid.Row="0"
                              IsItemsHost="True"
                              Margin="0,0,0,0"
                              KeyboardNavigation.TabIndex="1"/>

                            <!-- Content -->
                            <Border Grid.Row="2"
                            Background="Transparent"
                            BorderThickness="0"
                            SnapsToDevicePixels="True">
                                <ContentPresenter ContentSource="SelectedContent"
                                          Margin="0"
                                          SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                            </Border>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="CrispGridViewHeaderStyle2" TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource CrispGridViewHeaderStyle}">
            <Setter Property="Margin" Value="0,0,0,6"/>
        </Style>

        <Style x:Key="HardTabControlStyle" TargetType="{x:Type TabControl}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type TabControl}">
                        <Grid SnapsToDevicePixels="True">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="10"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <!-- Tabs -->
                            <TabPanel Grid.Row="0"
                              IsItemsHost="True"
                              KeyboardNavigation.TabIndex="1"/>

                            <!-- Selected tab content ONLY -->
                            <ContentPresenter Grid.Row="2"
                                      ContentSource="SelectedContent"
                                      Margin="0"
                                      SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Page.Resources>

    <!-- Backdrop -->
    <Grid Background="{StaticResource Backdrop}">
        <!-- Decorative layers (no clutter; just depth) -->
        <Canvas IsHitTestVisible="False" Opacity="0.55">
            <Ellipse Width="520" Height="520" Canvas.Left="-200" Canvas.Top="-210" Fill="#222B3F"/>
            <Ellipse Width="420" Height="420" Canvas.Left="520" Canvas.Top="40" Fill="#1B2233"/>
            <Ellipse Width="650" Height="650" Canvas.Left="140" Canvas.Top="290" Fill="#141A28"/>
        </Canvas>

        <Grid Margin="16">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header Bar -->
            <Border CornerRadius="18"
        BorderBrush="{StaticResource BorderSoft}"
        BorderThickness="1"
        Background="{StaticResource Bg1}"
        Padding="14"
        Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                    Style="{StaticResource BackButtonStyle}"
                    Content="←"
                    ToolTip="Back"
                    Click="Back_Click"/>

                        <StackPanel Grid.Column="2" Orientation="Vertical">
                            <TextBlock Text="Search"
                           FontSize="22"
                           FontWeight="ExtraBold"
                           Margin="0,0,0,2"/>

                            <TextBlock Text="Find your top songs and albums fast — filters on the left, ranked results on the right."
                           Foreground="{StaticResource TextMuted}"
                           FontSize="12"
                           TextWrapping="Wrap"/>
                        </StackPanel>
                    </Grid>

                    <Border Grid.Row="1"
                Height="3"
                VerticalAlignment="Bottom"
                CornerRadius="0,0,18,18"
                Background="{StaticResource HeaderGlow}"
                Effect="{StaticResource GlowShadow}"
                Opacity="0.85"
                IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Tabs -->
            <TabControl Grid.Row="2"
                        Style="{StaticResource HardTabControlStyle}"
                        BorderThickness="0"
                        Background="Transparent"
                        SelectedIndex="0"
                        SnapsToDevicePixels="True"
                        UseLayoutRounding="True">
                <TabControl.Resources>
                    <Style TargetType="{x:Type TabItem}" BasedOn="{StaticResource CrispTabItemStyle}"/>
                    <Style TargetType="{x:Type GridViewColumnHeader}" BasedOn="{StaticResource CrispGridViewHeaderStyle}"/>
                    <Style TargetType="{x:Type ListView}" BasedOn="{StaticResource CrispListViewStyle}"/>
                    <Style TargetType="{x:Type ListViewItem}" BasedOn="{StaticResource CrispListViewItemStyle}"/>
                </TabControl.Resources>

                <!-- SONG SEARCH -->
                <TabItem Header="Songs">
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filters Card -->
                        <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Filters"
                                               FontWeight="ExtraBold"
                                               FontSize="15"/>
                                    <TextBlock Text="Tune the query and hit Apply."
                                               Foreground="{StaticResource TextMuted}"
                                               FontSize="12"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <Border Grid.Row="2"
                                        Height="1"
                                        Background="{StaticResource BorderSoft}"
                                        Opacity="0.9"/>

                                <StackPanel Grid.Row="3" Margin="0,10,0,0">

                                    <TextBlock Text="Min score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsMinScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Max score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsMaxScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <CheckBox Style="{StaticResource CrispCheckBoxStyle}"
                                              Content="Include interludes"
                                              IsChecked="{Binding SongsIncludeInterludes}"/>

                                    <TextBlock Text="Title/artist contains" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsTextFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Notes contain" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding SongsNotesFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                </StackPanel>

                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Apply"
                                            Width="120"
                                            Command="{Binding ApplySongsFiltersCommand}"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding SongsStatusText}"
                                               Foreground="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Results Card -->
                        <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Background="{StaticResource CardBg2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Results"
                                                   FontWeight="ExtraBold"
                                                   FontSize="15"/>
                                        <TextBlock Text="Double-click a row to open it."
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="12"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Width="140"
                                            Height="28"
                                            CornerRadius="14"
                                            BorderBrush="{StaticResource BorderSoft}"
                                            BorderThickness="1"
                                            Background="#0E1420"
                                            VerticalAlignment="Center"
                                            Padding="10,0"
                                            Opacity="0.9">
                                        <TextBlock Text="Ranked by score"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"/>
                                    </Border>
                                </Grid>

                                <ListView Grid.Row="2"
                                          ItemsSource="{Binding SongResults}"
                                          SelectedItem="{Binding SelectedSongResult}"
                                          MouseDoubleClick="SongResult_DoubleClick">
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource CrispGridViewHeaderStyle2}">
                                            <GridViewColumn Header="#" Width="44"
                                                            DisplayMemberBinding="{Binding Rank}"/>
                                            <GridViewColumn Header="Song" Width="280"
                                                            DisplayMemberBinding="{Binding SongTitle}"/>
                                            <GridViewColumn Header="Album - Artist" Width="360"
                                                            DisplayMemberBinding="{Binding AlbumDisplay}"/>
                                            <GridViewColumn Header="Score" Width="90"
                                                            DisplayMemberBinding="{Binding ScoreText}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

                <!-- ALBUM SEARCH -->
                <TabItem Header="Albums">
                    <Grid Margin="0,12,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="320"/>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Filters Card -->
                        <Border Grid.Column="0" Style="{StaticResource CardBorderStyle}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0">
                                    <TextBlock Text="Filters"
                                               FontWeight="ExtraBold"
                                               FontSize="15"/>
                                    <TextBlock Text="Conclusion vs computed — dial in either."
                                               Foreground="{StaticResource TextMuted}"
                                               FontSize="12"
                                               Margin="0,2,0,0"/>
                                </StackPanel>

                                <Border Grid.Row="2"
                                        Height="1"
                                        Background="{StaticResource BorderSoft}"
                                        Opacity="0.9"/>

                                <StackPanel Grid.Row="3" Margin="0,10,0,0">

                                    <TextBlock Text="Min conclusion score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsMinConclusionScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Min computed score" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsMinComputedScoreText, UpdateSourceTrigger=PropertyChanged}"/>

                                    <TextBlock Text="Title/artist contains" Foreground="{StaticResource TextSecondary}"/>
                                    <TextBox Style="{StaticResource CrispTextBoxStyle}"
                                             Text="{Binding AlbumsTextFilter, UpdateSourceTrigger=PropertyChanged}"/>

                                </StackPanel>

                                <Grid Grid.Row="4" Margin="0,10,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="10"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Button Grid.Column="0"
                                            Style="{StaticResource PrimaryButtonStyle}"
                                            Content="Apply"
                                            Width="120"
                                            Command="{Binding ApplyAlbumsFiltersCommand}"/>

                                    <TextBlock Grid.Column="2"
                                               Text="{Binding AlbumsStatusText}"
                                               Foreground="{StaticResource TextMuted}"
                                               VerticalAlignment="Center"
                                               TextWrapping="Wrap"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Results Card -->
                        <Border Grid.Column="2" Style="{StaticResource CardBorderStyle}" Background="{StaticResource CardBg2}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="10"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Grid Grid.Row="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <StackPanel>
                                        <TextBlock Text="Results"
                                                   FontWeight="ExtraBold"
                                                   FontSize="15"/>
                                        <TextBlock Text="Double-click a row to open it."
                                                   Foreground="{StaticResource TextMuted}"
                                                   FontSize="12"
                                                   Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <Border Grid.Column="1"
                                            Width="190"
                                            Height="28"
                                            CornerRadius="14"
                                            BorderBrush="{StaticResource BorderSoft}"
                                            BorderThickness="1"
                                            Background="#0E1420"
                                            VerticalAlignment="Center"
                                            Padding="10,0"
                                            Opacity="0.9">
                                        <TextBlock Text="Sorted: Conclusion → Computed"
                                                   Foreground="{StaticResource TextSecondary}"
                                                   VerticalAlignment="Center"
                                                   FontSize="12"/>
                                    </Border>
                                </Grid>

                                <ListView Grid.Row="2"
                                          ItemsSource="{Binding AlbumResults}"
                                          SelectedItem="{Binding SelectedAlbumResult}"
                                          MouseDoubleClick="AlbumResult_DoubleClick">
                                    <ListView.View>
                                        <GridView ColumnHeaderContainerStyle="{StaticResource CrispGridViewHeaderStyle2}">
                                            <GridViewColumn Header="#" Width="44"
                                                            DisplayMemberBinding="{Binding Rank}"/>
                                            <GridViewColumn Header="Album - Artist" Width="420"
                                                            DisplayMemberBinding="{Binding AlbumDisplay}"/>
                                            <GridViewColumn Header="Conclusion" Width="110"
                                                            DisplayMemberBinding="{Binding ConclusionScoreText}"/>
                                            <GridViewColumn Header="Computed" Width="110"
                                                            DisplayMemberBinding="{Binding ComputedScoreText}"/>
                                            <GridViewColumn Header="Tracks used" Width="110"
                                                            DisplayMemberBinding="{Binding TracksUsedText}"/>
                                        </GridView>
                                    </ListView.View>
                                </ListView>
                            </Grid>
                        </Border>

                    </Grid>
                </TabItem>

            </TabControl>
        </Grid>
    </Grid>
</Page>
