<Page x:Class="Music_Organizer.MainMenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Music_Organizer"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainMenuPage">

    <Page.Resources>
        <local:ClampConverter x:Key="ClampConverter"/>
    </Page.Resources>

    <Grid Background="{StaticResource Backdrop}">

        <!-- Background art that scales consistently in fullscreen/windowed -->
        <Viewbox Stretch="UniformToFill"
         IsHitTestVisible="False"
         Opacity="0.42">
            <!-- Pick a "design size" you like; this keeps composition consistent -->
            <Canvas Width="1600" Height="900">

                <!-- Optional subtle diagonal sweep -->
                <Rectangle Width="1600" Height="900">
                    <Rectangle.Fill>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#00101117" Offset="0"/>
                            <GradientStop Color="#222C1DFF" Offset="0.40"/>
                            <GradientStop Color="#2200D4FF" Offset="0.70"/>
                            <GradientStop Color="#00FF2C86" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                </Rectangle>

                <!-- Ellipses: positions are now stable because the Canvas size is stable -->
                <Ellipse Width="920" Height="920"
                 Canvas.Left="-560" Canvas.Top="-320"
                 Fill="{StaticResource AccentA}"
                 Opacity="0.22"/>

                <Ellipse Width="640" Height="640"
                 Canvas.Left="-420" Canvas.Top="360"
                 Fill="{StaticResource AccentC}"
                 Opacity="0.18"/>

                <Ellipse Width="860" Height="860"
                 Canvas.Left="1040" Canvas.Top="-260"
                 Fill="{StaticResource AccentB}"
                 Opacity="0.18"/>

                <Ellipse Width="720" Height="720"
                 Canvas.Left="740" Canvas.Top="420"
                 Fill="{StaticResource AccentA}"
                 Opacity="0.12"/>

                <Ellipse Width="620" Height="620"
                 Canvas.Left="460" Canvas.Top="60"
                 Fill="{StaticResource AccentC}"
                 Opacity="0.10"/>
            </Canvas>
        </Viewbox>


        <!-- Subtle diagonal sweep for more gradient richness -->
        <Rectangle IsHitTestVisible="False" Opacity="0.35">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="#00101117" Offset="0"/>
                    <GradientStop Color="#222C1DFF" Offset="0.40"/>
                    <GradientStop Color="#2200D4FF" Offset="0.70"/>
                    <GradientStop Color="#00FF2C86" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!-- Main layout: header + center content -->
        <Grid Margin="18">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="14"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0"
                    CornerRadius="18"
                    BorderBrush="{StaticResource BorderSoft}"
                    BorderThickness="1"
                    Background="{StaticResource Bg1}"
                    Padding="14"
                    Effect="{StaticResource CardShadow}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="8"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>



                        <Border Grid.Column="1"
                                CornerRadius="14"
                                BorderBrush="{StaticResource BorderSoft}"
                                BorderThickness="1"
                                Background="#0E1420"
                                Padding="10,6"
                                VerticalAlignment="Center"
                                Opacity="0.9">
                        </Border>
                    </Grid>

                    <Border Grid.Row="1"
                            Height="3"
                            VerticalAlignment="Bottom"
                            CornerRadius="0,0,18,18"
                            Background="{StaticResource HeaderGlow}"
                            Effect="{StaticResource GlowShadow}"
                            Opacity="0.92"
                            IsHitTestVisible="False"/>
                </Grid>
            </Border>

            <!-- Center stage -->
            <Grid Grid.Row="2" Margin="0,6,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="420"/>
                    <ColumnDefinition Width="18"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- LEFT: Menu card anchored left, vertically centered -->
                <Border Grid.Column="0"
                        Style="{StaticResource CardBorderStyle}"
                        Background="{StaticResource CardBg}"
                        VerticalAlignment="Center">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="12"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="14"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="14"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>


                        <Border Grid.Row="1"
                                Height="1"
                                Background="{StaticResource BorderSoft}"
                                Opacity="0.9"/>

                        <!-- Reviews -->
                        <Button Grid.Row="2"
                                Click="Reviews_Click"
                                Style="{StaticResource MenuButtonStyle}"
                                Tag="{StaticResource AccentB}">
                            <Button.Width>
                                <MultiBinding Converter="{StaticResource ClampConverter}">
                                    <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualWidth"/>
                                    <Binding Source="300"/>
                                    <Binding Source="420"/>
                                    <Binding Source="2.7"/>
                                </MultiBinding>
                            </Button.Width>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="46" Height="46"
                                        CornerRadius="14"
                                        Background="#0E1420"
                                        BorderBrush="{StaticResource BorderSoft}"
                                        BorderThickness="1"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="★"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentB}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="2"
                                           Text="Reviews"
                                           FontSize="18"
                                           FontWeight="ExtraBold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <!-- Stats -->
                        <Button Grid.Row="4"
                                Click="Stats_Click"
                                Style="{StaticResource MenuButtonStyle}"
                                Tag="{StaticResource AccentA}">
                            <Button.Width>
                                <MultiBinding Converter="{StaticResource ClampConverter}">
                                    <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualWidth"/>
                                    <Binding Source="300"/>
                                    <Binding Source="420"/>
                                    <Binding Source="2.7"/>
                                </MultiBinding>
                            </Button.Width>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="46" Height="46"
                                        CornerRadius="14"
                                        Background="#0E1420"
                                        BorderBrush="{StaticResource BorderSoft}"
                                        BorderThickness="1"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="▦"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentA}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="2"
                                           Text="View Stats"
                                           FontSize="18"
                                           FontWeight="ExtraBold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                        <!-- Search -->
                        <Button Grid.Row="6"
                                Click="Search_Click"
                                Style="{StaticResource MenuButtonStyle}"
                                Tag="{StaticResource AccentC}">
                            <Button.Width>
                                <MultiBinding Converter="{StaticResource ClampConverter}">
                                    <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualWidth"/>
                                    <Binding Source="300"/>
                                    <Binding Source="420"/>
                                    <Binding Source="2.7"/>
                                </MultiBinding>
                            </Button.Width>

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="12"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <Border Width="46" Height="46"
                                        CornerRadius="14"
                                        Background="#0E1420"
                                        BorderBrush="{StaticResource BorderSoft}"
                                        BorderThickness="1"
                                        VerticalAlignment="Center">
                                    <TextBlock Text="⌕"
                                               FontSize="18"
                                               FontWeight="Bold"
                                               Foreground="{StaticResource AccentC}"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"/>
                                </Border>

                                <TextBlock Grid.Column="2"
                                           Text="Search"
                                           FontSize="18"
                                           FontWeight="ExtraBold"
                                           VerticalAlignment="Center"/>
                            </Grid>
                        </Button>

                    </Grid>
                </Border>

                <!-- RIGHT: Big title area centered vertically, living in middle/right -->
                <Grid Grid.Column="2" VerticalAlignment="Center">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock Grid.Row="0"
                               Text="Everything Musical Organizer"
                               FontWeight="ExtraBold"
                               TextWrapping="Wrap">
                        <TextBlock.FontSize>
                            <MultiBinding Converter="{StaticResource ClampConverter}">
                                <Binding RelativeSource="{RelativeSource AncestorType=Window}" Path="ActualWidth"/>
                                <Binding Source="34"/>
                                <Binding Source="78"/>
                                <Binding Source="10.5"/>
                            </MultiBinding>
                        </TextBlock.FontSize>
                    </TextBlock>

                    <!-- Big glow bar under title (no text, just vibe) -->
                    <Border Grid.Row="2"
                            Height="6"
                            CornerRadius="3"
                            Background="{StaticResource HeaderGlow}"
                            Effect="{StaticResource GlowShadow}"
                            Opacity="0.75"
                            HorizontalAlignment="Left"
                            Width="520"/>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Page>
