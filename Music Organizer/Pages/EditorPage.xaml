<Page x:Class="Music_Organizer.EditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Music_Organizer"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditorPage">

    <Page.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVis"/>

        <!-- Make ALL text white on this page -->
        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <!-- Typed text: white + consistent textbox look -->
        <Style x:Key="EditorTextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource CrispTextBoxStyle}">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#0E1420"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderSoft}"/>
            <Setter Property="SelectionBrush" Value="#553A1DFF"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>

        <Style TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style TargetType="ListBox">
            <Setter Property="Background" Value="#0E1420"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        </Style>

        <Style TargetType="ListBoxItem">
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0,0,0,6"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Root"
                                CornerRadius="12"
                                Background="{TemplateBinding Background}"
                                BorderBrush="Transparent"
                                BorderThickness="1"
                                SnapsToDevicePixels="True">
                            <ContentPresenter/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#1A2436"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="#2E3F5A"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Root" Property="Background" Value="#223153"/>
                                <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource AccentB}"/>
                            </Trigger>

                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="Root" Property="Opacity" Value="0.55"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Background="{StaticResource Backdrop}">

        <!-- Consistent background art scaling (visual only) -->
        <Viewbox Stretch="UniformToFill"
                 IsHitTestVisible="False"
                 Opacity="0.35">
            <Canvas Width="1600" Height="900">
                <Ellipse Width="560" Height="560" Canvas.Left="-220" Canvas.Top="-230" Fill="#222B3F"/>
                <Ellipse Width="760" Height="760" Canvas.Left="980" Canvas.Top="-140" Fill="#1B2233"/>
                <Ellipse Width="920" Height="920" Canvas.Left="300" Canvas.Top="420" Fill="#141A28"/>
            </Canvas>
        </Viewbox>

        <Grid Margin="16">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="14"/>
                <ColumnDefinition Width="420"/>
            </Grid.ColumnDefinitions>

            <!-- ===================== -->
            <!-- LEFT: Album + Tracks -->
            <!-- ===================== -->
            <Border Grid.Column="0"
                    Style="{StaticResource CardBorderStyle}"
                    Background="{StaticResource CardBg}"
                    Padding="14">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="12"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Top row: back + section -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="10"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button Grid.Column="0"
                                Name="Back_Button"
                                Style="{StaticResource BackButtonStyle}"
                                Content="←"
                                Click="Back_Click"
                                ToolTip="Back"/>

                        <TextBlock Grid.Column="2"
                                   Text="Album"
                                   FontSize="16"
                                   FontWeight="ExtraBold"
                                   VerticalAlignment="Center"/>
                    </Grid>

                    <!-- Accent bar -->
                    <Border Grid.Row="1"
                            Height="3"
                            CornerRadius="2"
                            Background="{StaticResource HeaderGlow}"
                            Opacity="0.55"
                            IsHitTestVisible="False"/>

                    <!-- Album header -->
                    <StackPanel Grid.Row="2" HorizontalAlignment="Center">
                        <Border Width="220"
                                Height="220"
                                CornerRadius="16"
                                ClipToBounds="True"
                                BorderBrush="{StaticResource BorderSoft}"
                                BorderThickness="1">
                            <Image Source="{Binding CoverImage}"
                                   Stretch="UniformToFill"/>
                        </Border>

                        <TextBlock Text="{Binding AlbumTitle}"
                                   FontSize="18"
                                   FontWeight="ExtraBold"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>

                        <TextBlock Text="{Binding ArtistName}"
                                   FontSize="13"
                                   Opacity="0.85"
                                   Margin="0,3,0,0"
                                   TextWrapping="Wrap"
                                   TextAlignment="Center"/>
                    </StackPanel>

                    <!-- Tracks header -->
                    <Grid Grid.Row="3">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock Text="Tracks"
                                   FontSize="14"
                                   FontWeight="ExtraBold"
                                   VerticalAlignment="Center"/>

                        <Border Grid.Column="1"
                                Height="24"
                                CornerRadius="12"
                                BorderBrush="{StaticResource BorderSoft}"
                                BorderThickness="1"
                                Background="#0E1420"
                                Padding="10,0"
                                VerticalAlignment="Center"
                                Opacity="0.95">
                            <TextBlock Text="Select to edit"
                                       FontSize="12"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>

                    <!-- Track list -->
                    <Border Grid.Row="4"
                            Margin="0,10,0,0"
                            CornerRadius="16"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            Background="#0E1420"
                            Padding="8">

                        <ListBox ItemsSource="{Binding Tabs}"
                                 SelectedItem="{Binding SelectedTab, Mode=TwoWay}">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Border CornerRadius="12"
                                            Padding="10"
                                            Margin="0">
                                        <TextBlock Text="{Binding DisplayName}"
                                                   TextWrapping="Wrap"
                                                   FontSize="13"/>
                                    </Border>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Border>

                </Grid>
            </Border>

            <!-- ===================== -->
            <!-- MIDDLE: Notes + Score -->
            <!-- ===================== -->
            <Border Grid.Column="2"
                    Style="{StaticResource CardBorderStyle}"
                    Background="{StaticResource CardBg2}"
                    Padding="14">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Header: Tab name + score (PROMINENT) + save buttons -->
                    <Grid Grid.Row="0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="12"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <StackPanel>
                            <TextBlock Text="{Binding SelectedTab.DisplayName}"
                                       FontSize="18"
                                       FontWeight="ExtraBold"
                                       TextWrapping="Wrap"/>
                            <Border Height="3"
                                    CornerRadius="2"
                                    Background="{StaticResource HeaderGlow}"
                                    Opacity="0.55"
                                    Margin="0,8,0,0"
                                    IsHitTestVisible="False"/>
                        </StackPanel>

                        <!-- Right cluster: Score pill + actions -->
                        <StackPanel Grid.Column="2"
                                    Orientation="Horizontal"
                                    VerticalAlignment="Top">

                            <!-- SCORE PILL (high visibility) -->
                            <Border CornerRadius="16"
                                    BorderBrush="{StaticResource BorderSoft}"
                                    BorderThickness="1"
                                    Background="#0E1420"
                                    Padding="12,8"
                                    Margin="0,0,12,0"
                                    Opacity="0.98">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse Width="8" Height="8"
                                             Fill="{StaticResource AccentC}"
                                             Margin="0,0,8,0"/>

                                    <TextBlock Text="Score"
                                               FontWeight="ExtraBold"
                                               Margin="0,0,8,0"
                                               VerticalAlignment="Center"/>

                                    <TextBox Width="78"
                                             Height="28"
                                             Name="ScoreBox"
                                             Style="{StaticResource EditorTextBoxStyle}"
                                             Margin="0"
                                             Padding="8,4"
                                             VerticalContentAlignment="Center"
                                             Text="{Binding SelectedTab.ScoreText, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                             IsEnabled="{Binding SelectedTab.IsScoreEnabled}"/>

                                    <Button Content="{Binding SelectedTab.InterludeButtonText}"
                                            Margin="10,0,0,0"
                                            Padding="10,4"
                                            Command="{Binding ToggleInterludeCommand}"
                                            IsEnabled="{Binding CanToggleInterlude}"/>
                                </StackPanel>
                            </Border>

                            <Button Content="Save"
                                    Width="90"
                                    Margin="0,0,8,0"
                                    Command="{Binding SaveCommand}"/>

                            <Button Content="Save &amp; Exit"
                                    Width="120"
                                    Click="SaveExit_Click"/>
                        </StackPanel>
                    </Grid>

                    <!-- Notes -->
                    <Border Grid.Row="2"
                            CornerRadius="16"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            Background="#0E1420"
                            Padding="10">
                        <TextBox Text="{Binding SelectedTab.Notes, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource EditorTextBoxStyle}"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="14"
                                 Margin="0"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>
                </Grid>
            </Border>

            <!-- ===================== -->
            <!-- RIGHT: Lyrics -->
            <!-- ===================== -->
            <Border Grid.Column="4"
                    Style="{StaticResource CardBorderStyle}"
                    Background="{StaticResource CardBg}"
                    Padding="14">

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="10"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="8"/>
                        </Grid.RowDefinitions>

                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Text="Lyrics"
                                       FontSize="16"
                                       FontWeight="ExtraBold"
                                       VerticalAlignment="Center"/>

                            <Border Grid.Column="1"
                                    Height="24"
                                    CornerRadius="12"
                                    BorderBrush="{StaticResource BorderSoft}"
                                    BorderThickness="1"
                                    Background="#0E1420"
                                    Padding="10,0"
                                    VerticalAlignment="Center"
                                    Opacity="0.95">
                                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                    <Ellipse Width="8" Height="8" Fill="{StaticResource AccentA}" Margin="0,0,8,0"/>
                                    <TextBlock Text="Read-only"
                                               FontSize="12"
                                               VerticalAlignment="Center"/>
                                </StackPanel>
                            </Border>
                        </Grid>

                        <Border Grid.Row="1"
                                Height="3"
                                CornerRadius="2"
                                Background="{StaticResource HeaderGlow}"
                                Opacity="0.55"
                                IsHitTestVisible="False"/>
                    </Grid>

                    <Border Grid.Row="2"
                            CornerRadius="16"
                            BorderBrush="{StaticResource BorderSoft}"
                            BorderThickness="1"
                            Background="#0E1420"
                            Padding="10">
                        <TextBox Text="{Binding SelectedTab.Lyrics}"
                                 Style="{StaticResource EditorTextBoxStyle}"
                                 IsReadOnly="True"
                                 AcceptsReturn="True"
                                 TextWrapping="Wrap"
                                 VerticalScrollBarVisibility="Auto"
                                 FontSize="13"
                                 Margin="0"
                                 BorderThickness="0"
                                 Background="Transparent"/>
                    </Border>

                </Grid>
            </Border>

        </Grid>
    </Grid>
</Page>
