<Page x:Class="Music_Organizer.AddAlbumPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:Music_Organizer"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddAlbumPage">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="12"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top bar: Back + inputs + actions -->
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="12"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Back button (top-left) -->
            <Button
                Name="Back_Button"
                Content="←"
                Width="44"
                Height="34"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="Back_Click"
                ToolTip="Back"/>

            <!-- Responsive form area -->
            <Grid Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="16"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Artist:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                <TextBox
                    x:Name="ArtistBox"
                    Grid.Column="1"
                    MinWidth="180"
                    Margin="0,0,0,0"
                    HorizontalAlignment="Stretch"/>

                <TextBlock
                    Grid.Column="3"
                    Text="Album:"
                    VerticalAlignment="Center"
                    Margin="0,0,8,0"/>

                <TextBox
                    x:Name="AlbumBox"
                    Grid.Column="4"
                    MinWidth="180"
                    HorizontalAlignment="Stretch"/>

                <Button
                    Grid.Column="6"
                    Content="Fetch"
                    MinWidth="110"
                    Padding="14,6"
                    Click="Fetch_Click"/>

                <Button
                    Grid.Column="8"
                    Content="Save"
                    MinWidth="110"
                    Padding="14,6"
                    Click="Save_Click"/>
            </Grid>
        </Grid>

        <TextBlock
            x:Name="StatusText"
            Grid.Row="2"
            Opacity="0.8"
            TextWrapping="Wrap"/>

        <!-- Main content -->
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220" />
                <ColumnDefinition Width="16" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Cover -->
            <Border Width="220"
            Height="220"
            CornerRadius="10"
            ClipToBounds="True">
                <Image x:Name="CoverImage"
               Stretch="UniformToFill"/>
            </Border>

            <!-- Right side: tracks + alternatives -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="12" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!-- Track list -->
                <ListBox x:Name="TracksList"
                 Grid.Row="0"/>

                <!-- Alternatives (collapsed by default) -->
                <Expander x:Name="AlternativesExpander"
                  Grid.Row="2"
                  Header="Not what you were looking for?"
                  IsExpanded="False">

                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="8" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <StackPanel Orientation="Horizontal">
                            <Button Content="Show next 3"
                            Width="120"
                            Click="ShowNext3_Click"/>
                            <TextBlock x:Name="AltStatus"
                               Margin="12,0,0,0"
                               VerticalAlignment="Center"
                               Opacity="0.8"/>
                        </StackPanel>

                        <ListBox x:Name="AlternativesList"
                         Grid.Row="2"
                         MouseDoubleClick="AlternativesList_DoubleClick">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Margin="0,0,0,10">
                                        <TextBlock Text="{Binding Line1}"
                                           FontWeight="SemiBold"
                                           TextWrapping="Wrap"/>
                                        <TextBlock Text="{Binding Line2}"
                                           Opacity="0.75"
                                           TextWrapping="Wrap"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </Grid>
                </Expander>
            </Grid>
        </Grid>

    </Grid>
</Page>
